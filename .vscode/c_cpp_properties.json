{
    "env": {
        "defIncludePath": [
            "${workspaceFolder}/build/generated/static/core/include",
            "${workspaceFolder}/build/generated/dynamic/render_opengl/include",
            "${workspaceFolder}/external/libs/glfw/include",
            "${workspaceFolder}/external/libs/libarp",
            "${workspaceFolder}/external/libs/libpng",
            "${workspaceFolder}/external/libs/zlib",
            "${workspaceFolder}/engine/libs/lowlevel/include",
            "${workspaceFolder}/engine/static/core/include",
            "${workspaceFolder}/engine/static/ecs/include",
            "${workspaceFolder}/engine/static/input/include",
            "${workspaceFolder}/engine/static/render/include",
            "${workspaceFolder}/engine/static/resman/include",
            "${workspaceFolder}/engine/static/wm/include",
            "${workspaceFolder}/engine/dynamic/render_opengl/include"
        ]
    },
    "configurations": [
        {
            "name": "Linux",
            "cStandard": "c11",
            "cppStandard": "c++14",
            "intelliSenseMode": "gcc-x64",
            "compilerPath": "/usr/bin/g++",
            "compilerArgs": [
                "-Wall",
                "-Wextra",
                "-Winit-self",
                "-Wold-style-cast",
                "-Woverloaded-virtual",
                "-Wuninitialized",
                "-Wmissing-declarations",
                "-Winit-self"
            ],
            "includePath": [
                "${defIncludePath}"
            ],
            "compileCommands": "${workspaceFolder}/build/compile_commands.json"
        },
        {
            "name": "Win32",
            "cStandard": "c99",
            "cppStandard": "c++11",
            "intelliSenseMode": "msvc-x64",
            "compilerArgs": [
                "/W4"
            ],
            "includePath": [
                "${defIncludePath}"
            ]
        }
    ],
    "version": 4
}